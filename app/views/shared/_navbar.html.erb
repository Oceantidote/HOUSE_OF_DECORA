<div class="navbar">
  <%= image_tag 'hamburger.png', id: 'navbar-toggle', class: 'navbar-hamburger' %>
  <%= image_tag 'house-of-decora-logo.png', class: 'navbar-logo' %>
  <div class="navbar-empty"></div>
</div>

<div id="navbar-slide" class="navbar-slide-menu">
  <div class="navbar-slide-menu-close">
    <p class="no-margin">Menu</p>
    <%= image_tag 'slide-menu-close.png' %>
  </div>
  <%= link_to 'About', '#', class: 'navbar-slide-menu-links lighter' %>
  <%= link_to 'Services', '#', class: 'navbar-slide-menu-links lighter' %>
  <%= link_to 'Gallery', '#', class: 'navbar-slide-menu-links lighter' %>
  <%= link_to 'Testimonials', '#', class: 'navbar-slide-menu-links lighter' %>
  <%= link_to 'Contact', '#', class: 'navbar-slide-menu-links lighter' %>
</div>

<script>
  hamburger = document.getElementById('navbar-toggle');
  navbarSlide = document.getElementById('navbar-slide');
  navbarSlideMenuClose = document.querySelector('.navbar-slide-menu-close')
  hamburger.addEventListener('click', () => {
    navbarSlide.classList.toggle('navbar-slide-show')
  })
  navbarSlideMenuClose.addEventListener('click', () => {
    navbarSlide.classList.toggle('navbar-slide-show')
  })

</script>











